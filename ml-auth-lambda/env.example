PERSONPROFILE_REPOSITORY=DYNAMO
ORGPROFILE_REPOSITORY=DYNAMO
DOCUMENTS_REPOSITORY=DYNAMO
SESSIONS_REPOSITORY=DYNAMO
DOCUMENTTYPES_REPOSITORY=DYNAMO
ROLES_REPOSITORY=DYNAMO
USERROLES_REPOSITORY=DYNAMO

# Cognito Configuration for Portal (Public Client)
COGNITO_REGION=us-east-1
COGNITO_PORTAL_USER_POOL_ID=us-east-1_XXXXXXXXX
