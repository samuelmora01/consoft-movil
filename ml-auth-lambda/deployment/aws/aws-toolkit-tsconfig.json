{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "../../dist",
        "rootDir": "../../src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "../../node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "../../src/**/*.ts"
    ]
}